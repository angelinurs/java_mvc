<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bbs">

	<select id="all" resultType="webBoard.vo.BbsVO">
		select * from `employees`.`bbs_t`
	</select>
	
	<select id="searchById" resultType="webBoard.vo.BbsVO" parameterType="String">
		select * from `employees`.`bbs_t`
		WHERE b_idx=#{idx}
	</select>

	<insert id="insert" parameterType="webBoard.vo.BbsVO">
		INSERT INTO `employees`.`bbs_t`(subject, writer, content, write_date, ip, hit, status)
		VALUES( #{subject}, #{writer}, #{content}, NOW(), #{ip}, 0, 0 )
	</insert>

</mapper>